{
  "name": "ani-player",
  "version": "1.0.0",
  "private": true,
  "author": "xLasercut",
  "scripts": {
    "serve": "vite preview",
    "build": "vite build",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "app:build": "npm run vite:build && tsc && electron-builder",
    "app:dev": "tsc && concurrently \"vite --host 0.0.0.0 --port 3000\" \" electron .\" \"tsc -w\"",
    "app:preview": "npm run vite:build && tsc && electron .",
    "dev": "vite",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.{ts,vue}' --write",
    "ts": "tsc",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:dev": "vite --host 0.0.0.0 --port 3000",
    "vite:preview": "vite preview",
    "watch": "tsc -w",
    "interface:generate": "ts-node generate-interfaces.ts"
  },
  "main": "dist/electron/main/index.js",
  "dependencies": {
    "@vime/core": "^5.3.1",
    "@vime/vue-next": "^5.3.1",
    "axios": "^0.27.2",
    "bootstrap": "^5.2.0",
    "joi": "^17.6.0",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.3",
    "concurrently": "^7.3.0",
    "electron": "^20.0.1",
    "electron-builder": "^23.3.3",
    "joi-to-typescript": "^4.0.5",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.8",
    "vue-tsc": "^0.38.4"
  },
  "build": {
    "appId": "dev.lasercut.ani-player",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "license": "MIT"
}
